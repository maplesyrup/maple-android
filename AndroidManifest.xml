<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.additt.maple_android"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-feature />

    <application
        android:name="com.additt.maple_android.MapleApplication"
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@drawable/additt_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.additt.maple_android.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.additt.maple_android.EditorActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            
            android:name="com.additt.ad_creation.LogoActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.additt.ad_creation.TextActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.additt.maple_android.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.additt.ad_creation.LogoPickerActivity"
            android:label="@string/title_activity_logo_picker" >
        </activity>
        <activity
            android:name="com.additt.ad_creation.CropActivity"
            android:label="@string/title_activity_crop" >
        </activity>
        <activity
            android:name="com.additt.ad_creation.ColorAdjustmentActivity"
            android:label="@string/title_activity_color_adjustment" >
        </activity>
        <activity
            android:name="com.additt.ad_creation.CompanyTagActivity"
            android:label="@string/title_activity_company_tag" >
        </activity>
        <activity
            android:name="com.additt.browsing.PopularAdsActivity"
            android:label="@string/title_activity_popular_ads" >
        </activity>
        <activity
            android:name="com.additt.browsing.PersonalAdsActivity"
            android:label="@string/title_activity_personal_ads" >
        </activity>
        <activity
            android:name="com.additt.ad_creation.PublishActivity"
            android:label="@string/title_activity_publish" >
        </activity>
        <activity
            android:name="com.additt.ad_creation.FilterActivity"
            android:label="@string/title_activity_filter" >
        </activity>
        <activity
            android:name="com.additt.browsing.FullImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_full_image"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>