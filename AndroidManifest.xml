<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maple_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-feature />

    <application
        android:name="com.example.maple_android.MapleApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.maple_android.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.maple_android.EditorActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.maple_android.LogoActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.maple_android.TextActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.maple_android.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.example.maple_android.LogoPickerActivity"
            android:label="@string/title_activity_logo_picker" >
        </activity>
        <activity
            android:name="com.example.ad_creation.NewAdActivity"
            android:label="@string/title_activity_new_ad" >
        </activity>
        <activity
            android:name="com.example.ad_creation.CropActivity"
            android:label="@string/title_activity_crop" >
        </activity>
        <activity
            android:name="com.example.ad_creation.ColorAdjustmentActivity"
            android:label="@string/title_activity_color_adjustment" >
        </activity>
    </application>

</manifest>