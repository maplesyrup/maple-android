<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewAdActivity" >

    <TextView
        android:id="@+id/newAdHeader" 
         android:layout_height="wrap_content" 
         android:layout_width="wrap_content"
         android:textStyle="bold"
         android:textSize="20sp"
         android:paddingBottom="5sp"
         android:paddingTop="5sp"
         android:layout_centerHorizontal="true"
         android:text="Create A New Ad"
    />
    
     <Button
        android:id="@+id/useImageFromFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="useImageFromFile"
        android:layout_below="@+id/newAdHeader"
        android:layout_centerHorizontal="true"
        android:text="Start with a picture from file"        
        />   
         <Button
        android:id="@+id/takeNewPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="takeNewPicture"
        android:layout_below="@+id/useImageFromFile"
        android:layout_centerHorizontal="true"
        android:text="Take A New Picture"        
        />    
        
          <Button
        android:id="@+id/loadSavedAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadSavedAd"
        android:layout_below="@+id/takeNewPicture"
        android:layout_centerHorizontal="true"
        android:text="Load A Saved Ad"        
        /> 

</RelativeLayout>