<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical" 
     android:id="@+id/compant_tag_layout" >
     
    <ImageView
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ad_padding"
        android:layout_below="@+id/topbar_container"
        android:layout_centerHorizontal="true" />

    <com.twotoasters.android.horizontalimagescroller.widget.HorizontalImageScroller
        android:id="@+id/companyScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ad"
        android:layout_centerHorizontal="true" />
    
 
    
</RelativeLayout>