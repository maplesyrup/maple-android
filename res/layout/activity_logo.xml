<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical" 
     android:id="@+id/logo_layout" >

     
     <com.example.custom_views.LogoView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/ad"
        android:paddingTop="@dimen/ad_padding"
	    android:layout_below="@+id/topbar_container"
	    android:layout_centerHorizontal="true" /> 

     <com.twotoasters.android.horizontalimagescroller.widget.HorizontalImageScroller
        android:id="@+id/logoScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ad"
        android:layout_centerHorizontal="true" />

   
     

</RelativeLayout>