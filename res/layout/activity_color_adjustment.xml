<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical" 
     android:id="@+id/color_adjustment_layout" >
     
     <ImageView
         android:id="@+id/ad"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="@dimen/ad_padding"
         android:layout_below="@+id/topbar_container"
         android:layout_centerHorizontal="true" />

     <SeekBar
         android:id="@+id/gammaSeekBar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/brightnessSeekBar"
         android:layout_below="@+id/ad"
         android:max="20"
         android:minWidth="150sp"
         android:progress="10" />

     <TextView
         android:id="@+id/gammaLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignTop="@+id/gammaSeekBar"
         android:paddingLeft="5sp"
         android:text="Gamma" />

     <SeekBar
         android:id="@+id/brightnessSeekBar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/gammaSeekBar"
         android:layout_toRightOf="@+id/brightnessLabel"
         android:max="510"
         android:minWidth="150sp"
         android:progress="255" />

     <TextView
         android:id="@+id/brightnessLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignTop="@+id/brightnessSeekBar"
         android:paddingLeft="5sp"
         android:text="Brightness" />

     <Button
         android:id="@+id/reset"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/brightnessSeekBar"
         android:layout_centerHorizontal="true"
         android:onClick="reset"
         android:text="Clear Changes" />
     
 </RelativeLayout>

